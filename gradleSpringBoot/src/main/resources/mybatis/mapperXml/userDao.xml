<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mypro.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.mypro.bean.User">
        <id column="user_id" property="user_id" jdbcType="VARCHAR"></id>
        <result column="user_name" property="user_name" jdbcType="VARCHAR"></result>
        <!--<result column="card_id" property="card_id" jdbcType="VARCHAR"></result>-->
        <result column="password" property="password" jdbcType="VARCHAR"></result>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,user_name,card_id,password
    </sql>

    <select id="getAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM tms_user_info
    </select>

    <select id="getUser" parameterType="String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM tms_user_info
        WHERE user_id=#{user_id}
    </select>

    <insert id="insert" parameterType="com.mypro.bean.User">
      INSERT INTO
          tsm_user_info
          (<include refid="Base_Column_List"></include>)
          VALUE
          (#{user_id},#{user_name},#{card_id},#{password})
    </insert>

    <update id="update" parameterType="com.mypro.bean.User">
        UPDATE
             tsm_user_info
        SET
             <if test="user_name != null" >user_name=#{user_name},</if>
              card_id=#{card_id}
        WHERE
              user_id=#{user_id}
    </update>

    <delete id="delete" parameterType="Integer" >
        DELETE FROM
            tsm_user_info
        WHERE
            user_id=#{user_id}
    </delete>

</mapper>